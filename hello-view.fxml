<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="281.0" prefWidth="255.0" spacing="10" style="-fx-background-color: #132635;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.javafxcalculator.HelloController">
  <padding>
    <Insets bottom="10" left="10" right="10" top="10" />
  </padding>

  <Label text="BMI Calculator" textAlignment="CENTER" textFill="#afb3b7" textOverrun="WORD_ELLIPSIS">
    <font>
      <Font name="Eras Bold ITC" size="19.0" />
    </font></Label>

  <HBox spacing="5">
    <Label text="Weight (kg):" textFill="WHITE">
      <font>
        <Font name="Bookshelf Symbol 7" size="12.0" />
      </font></Label>
    <TextField fx:id="weightField" promptText="kg / lbs">
      <font>
        <Font name="Bookman Old Style" size="13.0" />
      </font></TextField>
  </HBox>

  <HBox spacing="5">
    <Label text="Height (cm):" textFill="WHITE">
      <font>
        <Font name="Bookshelf Symbol 7" size="12.0" />
      </font></Label>
    <TextField fx:id="heightField" promptText="m / in" />
  </HBox>

  <Button id="calculateBmi" onAction="#calculateBMI" text="Calculate BMI">
    <font>
      <Font name="Bookshelf Symbol 7" size="13.0" />
    </font></Button>

  <Label fx:id="bmiResultLabel" text="BMI: " textFill="WHITE">
    <font>
      <Font name="Bookshelf Symbol 7" size="13.0" />
    </font></Label>
  <Label fx:id="bmiStatusLabel" text="Status: " textFill="WHITE">
    <font>
      <Font name="Bookshelf Symbol 7" size="13.0" />
    </font></Label>

  <MenuBar prefWidth="143.0" style="-fx-background-insets: 0b4650;">
    <Menu text="File">
      <MenuItem onAction="#onClear" text="Clear" />
      <MenuItem onAction="#onExit" text="Exit" />
    </Menu>
    <Menu onAction="#onAbout" text="Help">
      <MenuItem onAction="#onAbout" text="About" />
    </Menu>
    <cursor>
      <Cursor fx:constant="TEXT" />
    </cursor>
  </MenuBar>
</VBox>
